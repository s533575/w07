<%include header%>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-teal text-center">
                    <h3>Application Form</h3>
                </div>

                <form>
                    <div class="form-group">
                        <input type="text" placeholder="First Name"  id="firstname" required>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <input type="text" placeholder="Middle Name"  id="middlename" required>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <input type="text" placeholder="Last Name"  id="lastname" required>
                    </div>
                    <div class="form-group">
                        <input type="email" placeholder="Email" class="form-control" id="email" required>
                    </div>
                    <div class="form-group">
                            <input type="text" placeholder="Mobile Number" class="form-control" id="mobileNumber" required>
                        </div>
                    <div class="form-group basic-textarea rounded-corners">
                        <textarea rows="5" class="form-control " placeholder="Leave a Message"></textarea>
                    </div>
                </form>
                
            </div>
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <div class="card-footer">
                        <button type="button" class="btn btn-success" id="validate">Submit</button>
                        <button type="button" class="btn btn-danger">Cancel</button>

                    </div>
                </div>
                <div class="col-md-4"></div>
            </div>

            <div class="container signin" data-toggle="collapse" data-target="#login">
                <p>Already have an account? <a href="#">Sign in</a>.</p>
            </div>
        </div>

        <div class="col-md-3">
                <a href="https://www.linkedin.com/in/suresh-chandra-30a887159/"><i class="fa fa-linkedin fa-5x" aria-hidden="true"></i></a><br>
                <a href="https://github.com/s533575"><i class="fa fa-github fa-5x" aria-hidden="true"></i></a><br>
                <a href ="https://bitbucket.org/s533575/"><i class="fa fa-bitbucket fa-5x" aria-hidden="true"></i></a>

        </div>
    </div>



    <div id="login" class="collapse">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="card">
                <label id="username"><b>UserName</b></label>
                <input type="text" placeholder="Please Enter Username" name="username" required>

                <label id="password"><b>Password</b></label>
                <input type="password" placeholder="Please Enter Password" name="password" required>

                <button type="button" class="btn">Login</button>
            </div>

            <div class="card card-footer" style="background-color:#f1f1f1">
                <button type="button" class="cancelbtn">Cancel</button>
                <span class="password">Forgot <a href="#">password?</a></span>
            </div>
            <div class="col-md-3"></div>

        </div>
    </div>
   

</div>
<%include footer%>